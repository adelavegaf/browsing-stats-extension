{
  "manifest_version": 2,
  "name": "Web Drain",
  "description": "Chrome extension that keeps track of the URLs you visit to provide statistics.",
  "version": "0.0.0.1",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Web Drain",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "css": [],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "alarms",
    "storage",
    "tabs"
  ]
}
